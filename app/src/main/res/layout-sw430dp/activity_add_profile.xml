<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
   >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Start Time"
        android:id="@+id/setStartTime"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:clickable="true"
        android:onClick="showStartTime"
        android:layout_gravity="left|top"
        android:textSize="@dimen/timeTextSize"
        android:textColor="#3399FF"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/selectContacts"
        android:layout_alignStart="@+id/selectContacts"
        android:layout_marginLeft="@dimen/startTimeMargin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set End Time"
        android:id="@+id/setEndTime"
        android:layout_gravity="right|top"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:textSize="@dimen/timeTextSize"
        android:clickable="true"
        android:layout_marginTop="25dp"
        android:onClick="showEndTime"
        android:textColor="#FF3300"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/phoneCalls"
        android:layout_alignStart="@+id/phoneCalls" />





    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/SMS"
        android:textSize="@dimen/ProfileActivityTextSize"
        android:layout_alignTop="@+id/selectDays"
        android:layout_alignLeft="@+id/phoneCalls"
        android:layout_alignStart="@+id/phoneCalls"
        android:layout_alignBottom="@+id/selectDays"
        android:onClick="smsToggle"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Calls"
        android:id="@+id/phoneCalls"
        android:textSize="@dimen/ProfileActivityTextSize"
        android:onClick="phoneCallsToggle"
        android:layout_alignBottom="@+id/selectContacts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>








    <Button
        android:layout_width="@dimen/dayWidth"
        android:layout_height="@dimen/dayHeight"
        android:text="Days"
        android:background="#FFFFFF"
        android:textSize="@dimen/buttonTextSize"
        android:textColor="#000000"
        android:id="@+id/selectDays"
        android:clickable="true"
        android:onClick="selectDays"
        android:layout_below="@+id/selectContacts"
        android:layout_alignLeft="@+id/selectContacts"
        android:layout_alignStart="@+id/selectContacts"/>

    <Button
        android:layout_width="@dimen/conWidth"
        android:layout_height="@dimen/conHeight"
        android:text="Contacts"
        android:textSize="@dimen/buttonTextSize"
        android:background="#FFFFFF"
        android:layout_alignLeft="@+id/cancel_prof"
        android:layout_alignStart="@+id/cancel_prof"
        android:id="@+id/selectContacts"
        android:layout_marginLeft="15dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:onClick="selectContacts"
        android:textColor="#000000"
        android:layout_below="@+id/setStartTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"/>


    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="#ffb3b3"
        android:layout_alignTop="@+id/submit_prof"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cancel_prof"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginLeft="@dimen/submitButtonMargin"


        />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_prof"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginRight="@dimen/submitButtonMargin"
        android:background="#d6f5d6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
