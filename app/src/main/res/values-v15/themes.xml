<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->

    <style name="custom_Action" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF0000</item>
    </style>

    <style name="Base" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="Base">
        <!-- Main theme colors -->

        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>

    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF471A</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <color name="actionBarColor">#FF471A</color>

    <style name="ProfileActivityTheme" parent="Theme.AppCompat.Light">

        <item name="android:actionBarStyle">@style/ProfileActionBar</item>
        <item name="actionBarStyle">@style/ProfileActionBar</item>

        <item name="android:textColorPrimary">#000000</item>


    </style>

    <style name="ProfileActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF471A</item>
        <item name="background">@color/actionBarColor</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="titleTextStyle">@style/MyTitleStyle</item>

    </style>

    <style name="MyTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>

    </style>

</resources>