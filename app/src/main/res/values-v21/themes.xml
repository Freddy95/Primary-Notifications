<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base" parent="android:Theme.Material.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="Base">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#FF471A</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#b32300</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>

    <style name="ProfileActivityTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ProfileActionBar</item>
        <item name="actionBarStyle">@style/ProfileActionBar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorPrimaryDark">#b32300</item>

    </style>


    <style name="ProfileActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF471A</item>
        <item name="background">@color/actionBarColor</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="titleTextStyle">@style/MyTitleStyle</item>

    </style>

    <style name="MyTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>

    </style>

</resources>