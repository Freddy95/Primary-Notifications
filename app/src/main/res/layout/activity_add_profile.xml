<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.estevez95gmail.f.primarynotifications.AddProfileActivity">
    

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:id="@+id/frameLayout"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Time"
            android:id="@+id/setStartTime"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:clickable="true"
            android:onClick="showStartTime"
            android:layout_gravity="left|top"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#3399FF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set End Time"
            android:id="@+id/setEndTime"
            android:layout_gravity="right|top"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:clickable="true"
            android:onClick="showEndTime"
            android:textColor="#FF3300"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/cancel_prof"
            android:clickable="true"
            android:onClick="returnHome"
            android:layout_gravity="left|bottom"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/submit_prof"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="bottom|right"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Contacts"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="selectContacts"/>

    </FrameLayout>



</RelativeLayout>
